# Environment Variables Template

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# Azure Services (Optional)
NEXT_PUBLIC_AZURE_SPEECH_KEY=your_speech_key_here
NEXT_PUBLIC_AZURE_SPEECH_REGION=your_region_here
NEXT_PUBLIC_AZURE_LANGUAGE_KEY=your_language_key_here
NEXT_PUBLIC_AZURE_LANGUAGE_ENDPOINT=your_language_endpoint_here

# Authentication (if using external auth)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id

# Feature Flags
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Stripe (Payment Processing)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_key_here

# Social Media
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_TWITTER_HANDLE=@wally_ai
